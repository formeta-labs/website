generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para usuarios de la intranet
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Se guardará el hash, nunca la contraseña en texto plano
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Modelo para guardar los envíos del formulario de contacto
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  position  String?
  phone     String?
  service   String?
  projectType String?
  budget    String?
  timeline  String?
  priority  String?
  message   String
  gdprConsent Boolean @default(false)
  processed Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

// Roles de usuario
enum Role {
  USER  // Usuario normal, solo puede ver el panel con enlaces
  ADMIN // Puede gestionar usuarios
}
